<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inversor de Nome "
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome: "
        />

    <EditText
        android:id="@+id/etNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Digite seu nome"
        />



    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado:"
        android:visibility="invisible"
        android:textSize="20sp"
        android:textColor="#003775"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:layout_marginTop="10dp"
    />
     

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnInverter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Inverter"
            android:enabled="false"
            android:onClick="btnInverterOnClick"
            />
        <Button
            android:id="@+id/btnPalindromo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Verificar Palindromo"
            android:enabled="false"
            android:onClick="btnPalindromoOnClick"
            />

        <Button
            android:id="@+id/btnCriptografar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="criptografar nome"
            android:onClick="btnCriptografarOnClick"
            android:enabled="false"

            />
    </LinearLayout>



</LinearLayout>
